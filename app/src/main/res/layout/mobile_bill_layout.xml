<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/mobile_banking"
    android:gravity="center">
    <TextView
        android:id="@+id/bkashPageTV"
        style="@style/ActionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/bkash"
        android:drawableLeft="@drawable/bkash"
        android:text="Bkash Payment"
        android:textColor="@color/colorBlack"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimaryTransprent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight"/>
    <TextView
        android:id="@+id/rocketTV"
        style="@style/ActionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rocket"
        android:drawableLeft="@drawable/rocket"
        android:text="Rocket Payment"
        android:textColor="@color/colorBlack"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimaryTransprent"/>

</LinearLayout>